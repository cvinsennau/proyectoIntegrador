<header>
    <div class="header-container">
        <div class="logo-container">
            <% if(locals.user){%>
            <div>
                <a href="/">
                    <img class="logo" src="/images/foodiegram.png" alt="">
                </a>
            </div>
            <% } else {%>
                <a href="/">
                    <img class="logo" src="/images/foodiegram.png" alt="">
                </a>
            <% } %>
        </div>

        <div id="search-container" class="uk-margin">
            <form action="/search" method="GET" id="formSearch" class="uk-search uk-search-default">
                <input id="buscador-input" type="text" name="search" placeholder="Buscar..." class="uk-search-input"><span class="uk-search-icon-flip" uk-search-icon></span>
            </form>
        </div>

        <div class="nav-container">

            <% if(locals.user){%>  
                                
                <button id="dropdown" class="uk-button-default" type="button"> <h2 id="hello">Hola, <%= locals.user.name %> </h2> </button>
                    <div id="menu" uk-dropdown>
                        <ul class="uk-nav uk-dropdown-nav">

                            <li class="icon">
                                <span> Mi perfil <a id="imageUser" href="/user/myProfile/<%= locals.user.id %>">
                                    <% if(locals.user.user_picture == null) { %> 
                                        <span class="uk-icon-button" uk-icon="user"></span>
                                    <% } else { %> 
                                        <div class="uk-width-1-3 uk-flex uk-flex-center uk-flex-middle">
                                            <img src="<%= locals.user.user_picture %>" alt="foto de perfil" class="foto-perfil">
                                        </div>    
                                    <% } %> 
                                </a> </span>
                            </li>

                            <li class="icon">
                                <span> <a href="/post/add" class="uk-icon-link" uk-icon="icon: plus">Agregar post</a></span>
                            </li>

                            <li class="icon">
                                <form action='/account/logout' method="POST"> 
                                    <button id="logoutButton" type="submit"> <span type="submit" uk-icon="sign-out"> Logout</span></button>
                                </form>
                            </li>
                        </ul>
                    </div>
                

            <% } else {%>

                <div class="nav-container2">
                    <a class="account" id="register" href="/account/signup">
                        <h4 class="nav-text registrarse-text">Registrarse</h4>
                    </a>
                    <a class="account" id="loginSession" href="/account/login">
                        <h4 class="nav-text">Iniciar Sesi√≥n</h4>
                    </a>
                </div>
                
            <% } %>
        </div>
    </div>
</header>