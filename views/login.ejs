    <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.5/dist/js/uikit-icons.min.js"></script>
</head>

<body>
    <%- include('./partials/header')%>

    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                
                <form id="inicio" action="/account/login" method="POST">

                    <span class="logo1">foodie</span><span class="logo2">gram</span>
                    <div class="container">
                         
                        <!--Nombre de usuario-->
                        <div class="input-group flex-nowrap mb-3">
                            <div class="input-group-prepend">
                              <span class="input-group-text" id="addon-wrapping">@</span>
                            </div>
                            <input type="text" class="form-control" placeholder="usuario" name="name" required>
                        </div>

                        <!--MENSAJE ERROR SI EL USUARIO ES INCORRECTO-->

                        <!--Contraseña-->
                        <div class="input-group mb-3">
                            <input type="password" class="form-control" placeholder="contraseña" name="password" required>
                        </div>

                        <!--MENSAJE ERROR SI LA CONTRASENA ES INCORRECTA-->
    
                        <button id="buttonInicio" type="submit">Iniciar Sesión</button><br><br>

                        <div class="form-check">
                            <input name="rememberme" class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                            <label class="login" class="form-check-label" for="defaultCheck1"> Recordarme </label>
                        </div>

                        <span class="login">¿No tenes cuenta?<a href="/account/signup"> Registrate </a></span><br>
                        
                        <span class="login"><a href="/account/recover">Olvidé mi contraseña</a></span>

                    </div>
                </form>


                

            </div>
        </div>
    </main>

    <%- include('./partials/footer') %> 

</body>

</html>